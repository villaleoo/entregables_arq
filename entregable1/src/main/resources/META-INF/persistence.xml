<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

    <persistence-unit name="integrador1">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>dao.Cliente</class>
        <class>dao.Factura</class>
        <class>dao.Factura_Producto</class>
        <class>dao.Producto</class>

        <properties>
            <!-- Propiedades de configuracion de JDBC para MySQL /-->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/db"/>
            <property name="javax.persistence.jdbc.user" value="user" />
            <property name="javax.persistence.jdbc.password" value="password"/>

            <!-- Propiedad para la generacion automatica del esquema de base de datos -->
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="show_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>